<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.knowledge.programming.activities">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.knowledge.programming.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.knowledge.programming.activities.DisplayMessageActivity"/>
        <activity android:name="com.example.knowledge.programming.activities.ServicesActivity"/>
        <activity android:name="com.example.knowledge.programming.activities.RequestServices"/>
        <activity android:name="com.example.knowledge.programming.activities.OfferServices"/>
    </application>
</manifest>