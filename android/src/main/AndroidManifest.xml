<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.knowledge.programming.activities">

    <!-- -->
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />


    <application
        android:name="com.example.knowledge.programming.activities.ApplicationContext"

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DisplayMessageActivity" />
        <activity android:name=".ServicesActivity" />
        <activity android:name=".RequestServicesActivity" />
        <activity android:name=".OfferServicesActivity"></activity>
    </application>


</manifest>